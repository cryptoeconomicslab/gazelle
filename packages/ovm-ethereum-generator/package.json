{
  "name": "@cryptoeconomicslab/ovm-ethereum-generator",
  "version": "0.3.4",
  "description": "OVM evm bytecode generator",
  "author": {
    "name": "Cryptoeconomics Lab",
    "url": "https://www.cryptoeconomicslab.com/"
  },
  "engines": {
    "node": ">=10"
  },
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "directories": {
    "contracts": "contracts",
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "contracts",
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "mkdir -p build && waffle waffle-config.json && tsc --build && npm run build:property",
    "build:check": "tsc --noEmit",
    "test": "mocha --require ts-node/register 'test/**/*.test.ts'",
    "build:property": "node lib/compile.js",
    "lint": "eslint --ext ts,tsx src",
    "doc": "typedoc --out docs src",
    "clean": "rm -rf lib docs"
  },
  "dependencies": {
    "@cryptoeconomicslab/ovm-generator": "^0.3.4",
    "@cryptoeconomicslab/ovm-parser": "^0.3.0",
    "@cryptoeconomicslab/ovm-solidity-generator": "^0.3.4",
    "@cryptoeconomicslab/ovm-transpiler": "^0.3.4",
    "solc": "^0.5.15",
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@cryptoeconomicslab/ovm-parser": "^0.2.12",
    "@cryptoeconomicslab/ovm-transpiler": "^0.2.13",
    "@types/chai": "^4.2.11",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "ethereum-waffle": "~2.1.2",
    "ethers": "^4.0.46",
    "mocha": "^7.1.0"
  }
}
